# Configuration de production pour Learnia Backend
# ⚠️  IMPORTANT: Ne jamais commiter ce fichier avec des vraies valeurs !

# Environnement
ENVIRONMENT=production

# Configuration de base
APP_NAME=Learnia Backend
VERSION=1.0.0
DEBUG=false

# Base de données (PostgreSQL recommandé en production)
DATABASE_URL=postgresql://username:password@localhost:5432/learnia_prod

# Sécurité (OBLIGATOIRE - Générer avec: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-here-change-this-immediately
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# APIs externes
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Configuration CORS (domaines de production)
CORS_ORIGINS=["https://learnia.tg", "https://www.learnia.tg", "https://app.learnia.tg"]

# Configuration Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here

# Configuration IA
DEFAULT_AI_MODEL=gpt-4
MAX_TOKENS=1000
TEMPERATURE=0.7

# Configuration des logs
LOG_LEVEL=WARNING
LOG_FILE=/var/log/learnia/learnia.log

# Configuration de sécurité
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# Configuration de la base de données
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Configuration du cache
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Configuration de monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Configuration de sauvegarde
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# Configuration SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/learnia.crt
SSL_KEY_PATH=/etc/ssl/private/learnia.key

# Configuration de rate limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
